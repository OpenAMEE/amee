<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>Data Center Demo Dashboard</title>
	  <link type="text/css" rel="stylesheet" media="screen" href="/stylesheets/master.css" />
	  <link type="text/css" href="/stylesheets/jquery.autocomplete.css" rel="stylesheet" />	
	  
	  <script type="text/javascript" src="/javascripts/jquery-1.3.2.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.autocomplete.min.js"></script>
    
    <script>
      $(function(){
        
        $("#search").focus(function () {
          $(this).val("").removeClass("dimmed");
        });
        $("#search").blur(function () {
          $(this).val("Search").addClass("dimmed");
        });

        var parseJson = function (s) {
          return eval("(" + s + ")");
        };

        $("#search").autocomplete("/search", {
          formatItem: function(item) {
            return parseJson(item).content;
          },
          formatResult: function(item) {
            return parseJson(item).content;
          },
          delay: 50
        }).result(function(event, item) {
          location.href = parseJson(item).url;
        });    

    	});
    </script>
    
  </head>
    
  <body>
    
    <div id="wrapper">
      
  		<div id="header">
  		  <div class="top_nav">
  		    <ul>
  		        <li><a href="/">Dashboard</a></li><li>-</li>
  		        <li><a href="/admin">Data</a></li><li>-</li>
  		        <li><a href="/facilities">Facilities</a></li><li>-</li>
  		        <li><a href="/countries">Countries</a></li><li>-</li>
  		        <li><a href="/states">States</a></li><li>-</li>
  		        <li><a href="/assets">Assets</a></li><li>-</li>
  		        <li><a href="/products">Products</a></li>

  		        <% if logged_in %>
    		        <li>-</li>
    		        <li><a href="/login/logout">Sign Out <%= session["username"].capitalize %></a></li>
    		      <% end %>
  		    </ul>
  		  </div>
		  
  		  <% if logged_in %>
          <div id="search-wrapper">
            <div>
              <input id="search" type="text" value="Search" class="dimmed"/>
            </div>
          </div>
  		  <% end %>
		  
       </div>
    
      <%= catch_content :for_layout %>    
        
		  <div id="footer">
	  		<a href="/">About</a>
	  		::
	  		<a href="/">Terms &amp; Conditions</a>
	  		::
	  		<a href="/">Privacy</a>
	    </div>
      
    </div>
        
  </body>

</html>
        