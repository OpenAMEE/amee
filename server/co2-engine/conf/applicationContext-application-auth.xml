<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <bean id="authApplication" class="org.restlet.Application">
        <property name="root" ref="authDefault"/>
        <property name="tunnelService.methodTunnel" value="true"/>
        <property name="connectorService" ref="transactionConnectorService"/>
    </bean>

    <bean id="authDefault" class="org.restlet.ext.spring.SpringRouter">
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="com.jellymold.utils.ThreadBeanHolderFilter">
                        <property name="next">
                            <bean class="org.restlet.ext.seam.SpringFilter">
                                <constructor-arg index="0" ref="authApplication"/>
                                <constructor-arg index="1" ref="transactionController"/>
                                <property name="next">
                                    <bean class="com.jellymold.kiwi.SiteFilter">
                                        <constructor-arg index="0" ref="authApplication"/>
                                        <!-- UID below is from the /auth SiteApp for live.co2.dgen.net -->
                                        <constructor-arg index="1" value="54F6E6CCD4A6"/>
                                        <property name="next" ref="authRouter"/>
                                    </bean>
                                </property>
                            </bean>
                        </property>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="authRouter" class="org.restlet.ext.spring.SpringRouter">
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="authResource"/>
                    </bean>
                </entry>
                <entry key="/protected">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="protectedResource"/>
                    </bean>
                </entry>
                <entry key="/signIn">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="signInResource"/>
                    </bean>
                </entry>
                <entry key="/signOut">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="signOutResource"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

</beans>
