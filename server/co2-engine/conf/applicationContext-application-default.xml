<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <bean id="defaultApplication" class="org.restlet.Application">
        <property name="root" ref="defaultRoot"/>
        <property name="tunnelService.methodTunnel" value="true"/>
        <property name="connectorService" ref="transactionConnectorService"/>
    </bean>

    <bean id="defaultRoot" class="org.restlet.ext.spring.SpringRouter">
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="com.jellymold.utils.ThreadBeanHolderFilter">
                        <property name="next">
                            <bean class="org.restlet.ext.seam.SpringFilter">
                                <constructor-arg index="0" ref="defaultApplication"/>
                                <constructor-arg index="1" ref="transactionController"/>
                                <property name="next">
                                    <bean class="com.jellymold.kiwi.SiteFilter">
                                        <constructor-arg index="0" ref="defaultApplication"/>
                                        <constructor-arg index="1" value="Default App"/>
                                        <property name="next">
                                            <bean class="com.jellymold.kiwi.auth.GuestFilter">
                                                <constructor-arg index="0" ref="defaultApplication"/>
                                                <property name="next" ref="defaultRouter"/>
                                            </bean>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                        </property>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="defaultRouter" class="org.restlet.ext.spring.SpringRouter">
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="homeResource"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

</beans>
