<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <bean id="cacheApplication" class="org.restlet.Application">
        <property name="root" ref="cacheRoot"/>
        <property name="tunnelService.methodTunnel" value="true"/>
        <property name="statusService" ref="engineStatusService"/>
        <property name="name" value="Cache Administration"/>
    </bean>

    <bean id="cacheRoot" class="org.restlet.ext.spring.SpringRouter">
        <constructor-arg ref="cacheApplication"/>
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="org.restlet.ext.seam.TransactionFilter">
                        <constructor-arg index="0" ref="cacheApplication"/>
                        <property name="next">
                            <bean class="com.jellymold.kiwi.SiteFilter">
                                <constructor-arg index="0" ref="cacheApplication"/>
                                <property name="next">
                                    <bean class="com.jellymold.kiwi.auth.BasicAuthFilter">
                                        <constructor-arg index="0" ref="cacheApplication"/>
                                        <property name="next">
                                            <bean class="com.jellymold.kiwi.auth.AuthFilter">
                                                <constructor-arg index="0" ref="cacheApplication"/>
                                                <property name="next" ref="cacheRouter"/>
                                            </bean>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                        </property>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="cacheRouter" class="org.restlet.ext.spring.SpringRouter">
        <constructor-arg ref="cacheApplication"/>
        <property name="defaultMatchingMode" ref="modeEquals"/>
        <property name="defaultMatchQuery" value="false"/>
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="cachesResource"/>
                    </bean>
                </entry>
                <entry key="/{cacheName}">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="cacheResource"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="cacheActions" class="com.jellymold.kiwi.ResourceActions" scope="prototype">
        <constructor-arg index="0" value="cache"/>
    </bean>

</beans>
