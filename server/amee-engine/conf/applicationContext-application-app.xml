<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.5.xsd">

    <bean id="appsApplication" class="org.restlet.Application">
        <property name="root" ref="appsRoot"/>
        <property name="tunnelService.methodTunnel" value="true"/>
        <property name="statusService" ref="engineStatusService"/>
        <property name="name" value="App Administration"/>
    </bean>

    <bean id="appsRoot" class="org.restlet.ext.spring.SpringRouter">
        <constructor-arg ref="appsApplication"/>
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="com.amee.restlet.transaction.TransactionFilter">
                        <constructor-arg index="0" ref="appsApplication"/>
                        <property name="next">
                            <bean class="com.amee.restlet.site.SiteFilter">
                                <constructor-arg index="0" ref="appsApplication"/>
                                <property name="next">
                                    <bean class="com.amee.restlet.auth.BasicAuthFilter">
                                        <constructor-arg index="0" ref="appsApplication"/>
                                        <property name="next">
                                            <bean class="com.amee.restlet.auth.AuthFilter">
                                                <constructor-arg index="0" ref="appsApplication"/>
                                                <property name="next" ref="appsRouter"/>
                                            </bean>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                        </property>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="appsRouter" class="org.restlet.ext.spring.SpringRouter">
        <constructor-arg ref="appsApplication"/>
        <property name="defaultMatchingMode" ref="modeEquals"/>
        <property name="defaultMatchQuery" value="false"/>
        <property name="attachments">
            <map>
                <entry key="">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="appsResource"/>
                    </bean>
                </entry>
                <entry key="/{appUid}">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="appResource"/>
                    </bean>
                </entry>
                <entry key="/{appUid}/actions">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="actionsResource"/>
                    </bean>
                </entry>
                <entry key="/{appUid}/actions/{actionUid}">
                    <bean class="org.restlet.ext.spring.SpringFinder">
                        <lookup-method name="createResource" bean="actionResource"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="appActions" class="com.amee.service.auth.ResourceActions" scope="prototype">
        <constructor-arg index="0" value="app"/>
    </bean>

</beans>
