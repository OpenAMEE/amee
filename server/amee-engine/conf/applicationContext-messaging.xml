<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <bean class="com.amee.service.mq.amqp.MessagingConfig"/>

    <bean class="com.amee.service.mq.amqp.ConnectionConfig">
        <property name="addresses">
            <list>
                <bean class="com.rabbitmq.client.Address">
                    <constructor-arg value="127.0.0.1"/>
                    <constructor-arg value="5672"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean class="com.rabbitmq.client.ConnectionParameters">
        <property name="username" value="guest"/>
        <property name="password" value="guest"/>
        <property name="virtualHost" value="/"/>
        <property name="requestedHeartbeat" value="0"/>
    </bean>

    <bean id="invalidationExchange" class="com.amee.service.mq.amqp.ExchangeConfig">
        <property name="name" value="platform.invalidation"/>
        <property name="type" value="topic"/>
        <property name="durable" value="true"/>
    </bean>

    <bean id="invalidationPublish" class="com.amee.service.mq.amqp.PublishConfig"/>

    <bean id="invalidationConsume" class="com.amee.service.mq.amqp.ConsumeConfig"/>

    <bean id="invalidationQueue" class="com.amee.service.mq.amqp.QueueConfig">
        <property name="name" value="platform.invalidation.${AMEE_SERVER_NAME}.${AMEE_INSTANCE_NAME}"/>
        <property name="autoDelete" value="true"/>
    </bean>

</beans>