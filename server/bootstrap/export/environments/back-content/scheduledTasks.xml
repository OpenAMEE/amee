<?xml version="1.0" encoding="UTF-8"?>
<ScheduledTasks>
        <ScheduledTask>
        <Name>Persist Opinions</Name>
        <Component>opinionService</Component>
        <Method>persistOpinions</Method>
        <Cron>0 1/5 * * * ?</Cron>
        <Duration>300000</Duration>
        <RunOnShutdown>true</RunOnShutdown>
        <Servers></Servers>
        <Enabled>true</Enabled>
    </ScheduledTask>
    <ScheduledTask>
        <Name>Calculate Opinions</Name>
        <Component>opinionService</Component>
        <Method>calculateOpinions</Method>
        <Cron>0 2/10 * * * ?</Cron>
        <Duration>300000</Duration>
        <RunOnShutdown>true</RunOnShutdown>
        <Servers></Servers>
        <Enabled>true</Enabled>
    </ScheduledTask>
    <ScheduledTask>
        <Name>Calculate Ratings</Name>
        <Component>ratingService</Component>
        <Method>calculateRatings</Method>
        <Cron>0 3/30 * * * ?</Cron>
        <Duration>300000</Duration>
        <RunOnShutdown>true</RunOnShutdown>
        <Servers></Servers>
        <Enabled>true</Enabled>
    </ScheduledTask>
    <ScheduledTask>
        <Name>Purge Trashed Content</Name>
        <Component>contentMaintenanceService</Component>
        <Method>purgeTrashedContent</Method>
        <Cron>0 15 3 ? * *</Cron>
        <!-- 3.15am daily -->
        <Duration>0</Duration>
        <RunOnShutdown>true</RunOnShutdown>
        <Servers></Servers>
        <Enabled>true</Enabled>
    </ScheduledTask>
    <ScheduledTask>
        <Name>Trash Blocked And Spam Content</Name>
        <Component>contentMaintenanceService</Component>
        <Method>trashDraftBlockedandSpamContent</Method>
        <Cron>0 15 2 ? * *</Cron>
        <!-- 2.15am daily -->
        <Duration>0</Duration>
        <RunOnShutdown>true</RunOnShutdown>
        <Servers></Servers>
        <Enabled>true</Enabled>
    </ScheduledTask>
</ScheduledTasks>    
